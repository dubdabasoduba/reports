	<queryString>
		<![CDATA[SELECT
    b.bill_id,
    i.name,
    bi.quantity,
    bi.price
FROM
    cashier_bill b INNER JOIN cashier_bill_line_item bi ON
        b.bill_id = bi.bill_id
